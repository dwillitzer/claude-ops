{
  "name": "claude-ops",
  "version": "2.0.0",
  "description": "Director-based multi-agent orchestration CLI with WASM security and long-running agent support",
  "main": "src/index.js",
  "bin": {
    "claude-ops": "./bin/claude-ops.js"
  },
  "files": [
    "bin/",
    "src/",
    "wasm/"
  ],
  "scripts": {
    "build:wasm": "echo 'Using sentinel-wasm from ../sentinel-wasm/pkg/' && cp ../sentinel-wasm/pkg/sentinel_wasm* wasm/",
    "update:wasm": "cp ../sentinel-wasm/pkg/sentinel_wasm* wasm/",
    "mcp": "node src/mcp/claude-ops-server.js",
    "test": "node --test src/**/*.test.js"
  },
  "keywords": [
    "ai",
    "agents",
    "orchestration",
    "claude",
    "directors",
    "hive-mind",
    "wasm",
    "security",
    "long-running",
    "session-management"
  ],
  "author": "Daniel Willitzer",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "inquirer": "^8.2.7",
    "ora": "^5.4.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
